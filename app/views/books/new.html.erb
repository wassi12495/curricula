<h1>Create New Book</h1>
  <div class="row">
    <div class="col s12"></div>
    <div class='col s6'><img src=https://i.pinimg.com/736x/cd/fa/cd/cdfacd22d84de3db53c0e7e404ee770b.jpg></div>
    <div class="col s6">
      <ul>
      <%= form_for @book do |f|%>

      <%= f.label :title%>
      <%= f.text_field :title%>
      <br>
      <%= f.label :author%>
      <%= f.text_field :author%>
      <br>
      <%= f.label :year%>
      <%= f.text_field :year%>
      <br>
      <%= f.label :publisher%>
      <%= f.text_field :publisher%>
      <br>
      <%= f.label :description%>
      <%= f.text_area :description%>
      <br>
      <%= f.label :subject %>
      <%= f.collection_select(:subject_id, Subject.all, :id, :name)%>

      <br>
      <%= f.submit %>
      <%end%>

      </ul>
    </div>
  </div>
