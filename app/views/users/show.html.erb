
<div class = "container">
  <div class="row">

    <div class="col s6">
      <h2><%=@user.name%></h2><br>
      <p><%=@user.biography%></p>
      <h4><%=@user.name%>'s Curricula:</h4>
          <%@user.curriculums.each do |curriculum|%>
            <div class="col s6">
                <ul>
                  <li>
                    <a href="<%=curriculum_path(curriculum)%>">
                      <div class="card-panel hoverable indigo lighten-5">
                        <div class="card-image">
                            <img class="responsive-img" src="<%if curriculum.books.empty?%><%=%><%else%><%=curriculum.books.first.img_url%><%end%>">
                        </div>
                        <span class="card-title"><%=curriculum.title%></span>

                      </div>
                    </a>
                  </li>
                </ul>
              </div>
            <%end%>
          </div>

          <div class="col s6">
            <img class="circle responsive-img" style="height:250px  overflow:hidden" src ="<%=@user.img_url%>">
          </div>
    </div>


  </div>
</div>
