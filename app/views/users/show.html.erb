
<div class = "container">
  <div class="row">
    <div class="col s6">
      <h2><%=@user.name%></h2><br>
      <p><%=@user.biography%></p>


          <%@user.curriculums.each do |curriculum|%>
            <div class="col s2">
                <ul>
                  <li>
                    <a href="<%=curriculum_path(curriculum)%>">
                      <div class="card-panel hoverable">
                        <div class="card-image">
                          <img class="responsive-img" src="<%=@user.img_url%>">
                          <span class="card-title"><%=curriculum.title%>></span>
                        </div>
                      </div>
                    </a>
                  </li>
                </ul>
              </div>
            <%end%>
          </div>
    </div>

    <div class="col s6">
      <img src = "<%=@user.img_url%>">
      
    </div>

  </div>
</div>
